<header>

{{>nav}}
</header>

<body>
  
  <video class="video-background" src="./foto/f4.mp4 " autoplay loop></video>

  <main class="container">
    <h3 class="text-center text-light">Regala</h3>

    <div class="contacto-bg"></div>

    <form class="formulario">
      <label class="campo__label" for="nombre">Nombre</label>
        <div class="campo">
            
            <input 
                class="campo__field"
                id="nombre" 
                type="text" 
                placeholder="Tu nombre"
            >
        </div>
        <label class="campo__label" for="email">E-mail</label>
        <div class="campo">
            
            <input 
                class="campo__field"
                id="email" 
                type="email" 
                placeholder="Tu email"
            >
        </div>
        <label class="campo__label" for="mensaje">Mensaje</label>
        <div class="campo">
            
            <textarea 
                class="campo__field campo__field--textarea"
                id="mensaje"
            ></textarea>
        </div>
        <div class="d-flex justify-content-end mb-3">
          <button type="submit" value="Enviar" class="btn btn-outline-danger text-dark">Crear</button>
      </div>
    </form>

</main>
  {{>footer}}
