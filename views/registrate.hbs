<!DOCTYPE html>
<html lang="es">

{{>head}}

<body>
    <header>
        {{>nav}}
    </header>
    <video class="video-background" src="./foto/f4.mp4 " autoplay loop></video>
    <div class="contacto-bg mt-5 mb-5">
        <form method="POST" action="/registrate" class="formulario mx-auto mt-5 mb-5">
            <h3 class="text-center text-dark">Registrate</h3>
            <label class="campo__label" for="nombre">Nombre</label>
            <div class="campo">
                <input class="campo__field" name="name" id="nombre" type="text" placeholder="Tu nombre " required>
            </div>
            <label class="campo__label" for="email">E-mail</label>
            <div class="campo">
                <input class="campo__field" name="email" id="email" type="email" placeholder="Tu email" required>
            </div>
            <label class="campo__label" for="mensaje">Contraseña</label>
            <div class="campo">
                <input id="contraseña" name="password" class="campo__field" type="password" placeholder="Contraseña" required>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <button type="submit" value="Enviar" class="btn btn-outline-danger text-dark">Registrate</button>
            </div>
        </form>
    </div>

    {{>footer}}
    {{!-- <script src="./js/registro.js"></script> --}}
</body>
</html>